<head>
	<%= @driversThings %>
	<style type="text/css">
		div#map_container{
			width:288px;
			height:200px;
		}

	</style>
	<script type="text/javascript" 
	   src="http://maps.googleapis.com/maps/api/js?sensor=false"></script>
	 
	<script type="text/javascript">
	  function loadMap() {
		var latlng = new google.maps.LatLng(<%= @driversThings[:latitude] %>, <%= @driversThings[:longitude] %>);
		var myOptions = {
		  zoom: 14,
		  center: latlng,
		  mapTypeId: google.maps.MapTypeId.ROADMAP
		};
		var map = new google.maps.Map(document.getElementById("map_container"),myOptions);
	 
		var marker = new google.maps.Marker({
		  position: latlng, 
		  map: map, 
		}); 
	 
	  }
	</script>
</head>
<body onload="loadMap()">
	<div data-role="page" data-url="<%= request.path %>">
	  <%= render 'layouts/header' %>
	  <div data-role="content">
		<h2>Profile page</h2>
		
		<h3>Basic Information</h3>
		<div class="ui-grid-a">
			<div class="ui-block-a">
				<u>Time Zone:</u>
			</div>
			<div class="ui-block-b">
				<%= @driversThings[:timeZone] %> 
			</div>
			
			<div class="ui-block-a">
				<u>Name:</u> 
			</div>
			<div class="ui-block-b">
				<%= @driversThings[:driverName] %>
			</div>
			
			<div class="ui-block-a">
				<u>Trip Time Resolution:</u>
			</div>
			<div class="ui-block-b">
				<%= @driversThings[:tripTimeResolution] %>
			</div>
			
			<div class="ui-block-a">
				<u>Language Locale:</u>
			</div>
			<div class="ui-block-b">
				<%= @driversThings[:driverLanguageLocale] %>
			</div>
		</div>
		
		<h3>Driver Location</h3>
		<div class="ui-grid-a">
			<div class="ui-block-a">
				<u>Description:</u>
			</div>
			<div class="ui-block-b">
				<%= @driversThings[:description] %>
			</div>
			
			<div class="ui-block-a">
				<u>Latitude:</u>
			</div>
			<div class="ui-block-b">
				<%= @driversThings[:latitude] %>
			</div>
			
			<div class="ui-block-a">
				<u>Longitude:</u>
			</div>
			<div class="ui-block-b">
				<%= @driversThings[:longitude] %>
			</div>
			
			<div class="ui-block-a">
				<u>Default:</u>
			</div>
			<div class="ui-block-b">
				<%= @driversThings[:default] %>
			</div>
		</div>
		
		<p>Map As Image</p>
		<img src="https://maps.googleapis.com/maps/api/staticmap?center= <%= @driversThings[:latitude] %> <%= @driversThings[:longitude] %>&amp; zoom=25&amp;size=288x200&amp;markers=-33.889914, 151.190560&amp;sensor=false" width="288" height="200">

		<p> Map with javascript stuff </p>	
		<div id="map_container"></div>

	  </div>
	  <%= render 'layouts/footer' %> 
	</div>
</body>
