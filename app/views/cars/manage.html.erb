<div data-role="page" data-url="<%= request.path %>" data-theme="b" data-content-theme="b">
	<%= render 'layouts/header' %>
	
	<div data-role="content">
		<%= link_to "Back", cars_path, { "data-role" => "button", "data-transition" => "slide", "data-prefetch" => "true", "data-inline" => "true" } %>
		<br>
		<td>
			<%= image_tag(@car[:image])%>
			<br>
	    </td>
	    <td>
			<p><b>Vehicle Type: </b><%= @car_info[:remark] %></p>
     		<p><b>Year: </b><%= @car_info[:year] %></p>
			<p><b>Plate: </b><%= @car_info[:plate] %></p>
	    </td>

        <%= link_to "Details", cars_details_path(:id => @car_info[:id]), { "data-role" => "button", "data-transition" => "slide", "data-prefetch" => "true", "data-inline" => "true", :method => :get } %>
		<%= link_to "Rates", cars_rates_path(:id => @car_info[:id]), { "data-role" => "button", "data-transition" => "slide", "data-prefetch" => "true", "data-inline" => "true", :method => :get } %>
		<%= link_to "Parking", cars_parking_path(:id => @car_info[:id]), { "data-role" => "button", "data-transition" => "slide", "data-prefetch" => "true", "data-inline" => "true", :method => :get } %>
		<%= link_to "Schedule", cars_schedule_path(:id => @car_info[:id]), { "data-role" => "button", "data-transition" => "slide", "data-prefetch" => "true", "data-inline" => "true", :method => :get } %> 

	</div>  
	<%= render 'layouts/footer' %> 
</div>