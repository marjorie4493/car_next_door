<div data-role="page" data-url="<%= request.path %>" data-theme="b" data-content-theme="b">
	<%= render 'layouts/header' %>
	
	<div data-role="content">
		<table>
			<td>
				<%= image_tag(@car[:image])%>
				<br>
		    </td>
		    <td>
				<p><b>Vehicle Type: </b><%= @car_info[:remark] %></p>
	     		<p><b>Year: </b><%= @car_info[:year] %></p>
				<p><b>Plate: </b><%= @car_info[:plate] %></p>
		    </td>
		</table>
		<%= link_to "Manage", cars_manage_path(:id => @car_info[:id]), { "data-role" => "button", "data-transition" => "slide", "data-prefetch" => "true", "data-inline" => "true", :method => :get } %>
		<%= link_to "Reserve", cars_reserve_path(:id => @car_info[:id]), { "data-role" => "button", "data-transition" => "slide", "data-prefetch" => "true", "data-inline" => "true", :method => :get } %>
	</div>  
	<%= render 'layouts/footer' %> 
</div>
